{
  "metadata": {
    "screenId": "CPE_PRICE_ANALYSIS_001",
    "screenName": "CPE Price Analysis Workbench",
    "module": "Procurement",
    "sapFioriFloorplan": "Analytical List Page",
    "userPersonas": [
      "Fuel Contracts Manager",
      "Procurement Manager"
    ],
    "authorizedRoles": [
      "User",
      "Procurement"
    ],
    "responsiveBreakpoints": [
      "Desktop (1920px)",
      "Tablet (768px)",
      "Mobile (375px)"
    ],
    "layoutType": "Full-width with Charts and Trends",
    "implementationStatus": "Implemented"
  },
  "layoutStructure": {
    "gridSystem": "8px base grid (--spacing-xs through --spacing-xxl)",
    "containerMaxWidth": "1600px",
    "pageLayoutType": "Analytical List Page with Charts",
    "sections": [
      {
        "sectionId": "filter-bar",
        "sectionName": "Filter Bar",
        "position": "Top",
        "gridColumns": 12,
        "spacing": "var(--spacing-m)"
      },
      {
        "sectionId": "kpis",
        "sectionName": "KPI Tiles",
        "position": "Below FilterBar",
        "gridColumns": 12,
        "spacing": "var(--spacing-m)"
      },
      {
        "sectionId": "charts",
        "sectionName": "Charts",
        "position": "Middle",
        "gridColumns": 12,
        "spacing": "var(--spacing-m)"
      },
      {
        "sectionId": "table",
        "sectionName": "Data Table",
        "position": "Bottom",
        "gridColumns": 12,
        "spacing": "0"
      }
    ]
  },
  "componentInventory": [
    {
      "componentId": "filter-bar",
      "componentType": "Filter Bar",
      "sapUI5Equivalent": "sap.ui.comp.filterbar.FilterBar",
      "properties": {
        "searchEnabled": true,
        "showGoButton": true,
        "backgroundColor": "var(--card)",
        "borderBottom": "1px solid var(--border)"
      },
      "dimensions": {
        "width": "100%",
        "height": "Auto",
        "padding": "var(--spacing-m)"
      }
    },
    {
      "componentId": "data-table",
      "componentType": "Responsive Table",
      "sapUI5Equivalent": "sap.m.Table",
      "properties": {
        "mode": "SingleSelectMaster",
        "alternateRowColors": true,
        "sticky": [
          "ColumnHeaders",
          "HeaderToolbar"
        ],
        "growing": true,
        "growingThreshold": 50
      },
      "dimensions": {
        "width": "100%",
        "minHeight": "600px"
      }
    },
    {
      "componentId": "kpi-tiles",
      "componentType": "KPI Tiles",
      "sapUI5Equivalent": "sap.m.GenericTile",
      "properties": {
        "layout": "Grid",
        "columns": 4,
        "backgroundColor": "var(--card)",
        "borderColor": "var(--border)",
        "borderRadius": "var(--radius-card)"
      },
      "dimensions": {
        "width": "calc(25% - var(--spacing-m))",
        "height": "120px",
        "padding": "var(--spacing-m)"
      }
    },
    {
      "componentId": "charts",
      "componentType": "Charts",
      "sapUI5Equivalent": "sap.viz.ui5.controls",
      "properties": {
        "chartTypes": [
          "Line",
          "Bar",
          "Donut",
          "Area"
        ],
        "colorPalette": [
          "var(--primary-blue)",
          "var(--secondary-blue)",
          "var(--info-blue)"
        ],
        "interactive": true
      },
      "dimensions": {
        "width": "100%",
        "height": "400px"
      }
    }
  ],
  "dataModel": {
    "entityName": "GenericEntity",
    "description": "Primary entity for CPE Price Analysis Workbench",
    "fields": [
      {
        "fieldName": "genericEntityId",
        "dataType": "UUID",
        "description": "Unique GenericEntity identifier",
        "key": true,
        "required": true
      },
      {
        "fieldName": "createdDate",
        "dataType": "DateTime",
        "description": "Creation timestamp",
        "required": true
      },
      {
        "fieldName": "createdBy",
        "dataType": "String",
        "description": "User who created the record",
        "maxLength": 100,
        "required": true
      },
      {
        "fieldName": "lastModifiedDate",
        "dataType": "DateTime",
        "description": "Last modification timestamp",
        "required": false
      },
      {
        "fieldName": "status",
        "dataType": "String",
        "description": "Record status",
        "enumValues": [
          "Draft",
          "Active",
          "Completed",
          "Cancelled"
        ],
        "required": true
      }
    ],
    "associations": [
      {
        "associationName": "toUserCreated",
        "targetEntity": "User",
        "cardinality": "N:1",
        "foreignKey": "createdBy"
      }
    ]
  },
  "actions": [
    {
      "actionId": "default-action",
      "actionType": "Interaction",
      "trigger": "onClick",
      "element": "Interactive Elements",
      "behavior": "Standard user interactions"
    }
  ],
