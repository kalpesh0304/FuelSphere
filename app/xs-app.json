{
  "welcomeFile": "/odata/v4/master",
  "authenticationMethod": "route",
  "sessionTimeout": 60,
  "routes": [
    {
      "source": "^/odata/v4/(.*)$",
      "target": "/odata/v4/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    },
    {
      "source": "^/api/(.*)$",
      "target": "/api/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    },
    {
      "source": "^/(.*)$",
      "target": "/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa"
    }
  ]
}
