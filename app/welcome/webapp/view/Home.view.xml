<mvc:View
    controllerName="fuelsphere.welcome.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards">
    <Page id="homePage" title="{i18n>appTitle}">
        <content>
            <VBox class="sapUiMediumMargin" alignItems="Center">
                <Title text="{i18n>welcomeTitle}" class="sapUiMediumMarginBottom" level="H1"/>
                <Text text="{i18n>welcomeDescription}" class="sapUiMediumMarginBottom"/>

                <HBox justifyContent="Center" wrap="Wrap" class="sapUiMediumMarginTop">
                    <f:Card class="sapUiSmallMargin" width="300px">
                        <f:header>
                            <card:Header title="{i18n>masterDataTitle}" subtitle="{i18n>masterDataSubtitle}" iconSrc="sap-icon://database"/>
                        </f:header>
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <Text text="{i18n>masterDataDesc}"/>
                                <Button text="{i18n>openButton}" type="Emphasized" class="sapUiSmallMarginTop" press="onOpenMasterData"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiSmallMargin" width="300px">
                        <f:header>
                            <card:Header title="{i18n>fuelOrdersTitle}" subtitle="{i18n>fuelOrdersSubtitle}" iconSrc="sap-icon://shipping-status"/>
                        </f:header>
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <Text text="{i18n>fuelOrdersDesc}"/>
                                <Button text="{i18n>openButton}" type="Emphasized" class="sapUiSmallMarginTop" press="onOpenFuelOrders"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <f:Card class="sapUiSmallMargin" width="300px">
                        <f:header>
                            <card:Header title="{i18n>invoicesTitle}" subtitle="{i18n>invoicesSubtitle}" iconSrc="sap-icon://receipt"/>
                        </f:header>
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <Text text="{i18n>invoicesDesc}"/>
                                <Button text="{i18n>openButton}" type="Emphasized" class="sapUiSmallMarginTop" press="onOpenInvoices"/>
                            </VBox>
                        </f:content>
                    </f:Card>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
